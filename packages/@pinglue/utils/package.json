{
  "name": "@pinglue/utils",
  "version": "0.0.0",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./testing/replace-module": "./lib/testing/replace-module.js",
    "./testing/fake-console": "./lib/testing/fake-console.js",
    "./testing/fake-fs": "./lib/testing/fake-fs.js",
    "./bm-factories": "./lib/bm-factories/index.js"
  },
  "type": "module",
  "files": [
    "lib",
    "tests"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "./node_modules/.bin/tsc -w",
    "build-ts": "./node_modules/.bin/tsc -b",
    "clean-extras": "rm *.log",
    "clean-ts": "rm -rf lib; rm tsconfig.tsbuildinfo",
    "clean-node": "rm -rf node_modules",
    "clean-all": "npm run clean-extras; npm run clean-ts; npm run clean-node",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "test-mocha": "npx mocha --loader=@pinglue/utils/testing/replace-module --no-warnings",
    "lint": "node_modules/.bin/eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "memfs": "^3.4.1",
    "quibble": "^0.6.8",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.31.0",
    "memfs": "^3.4.1",
    "mocha": "^9.2.2",
    "typedoc": "0.22.12",
    "typescript": "4.5.5"
  }
}
