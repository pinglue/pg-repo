{
  "name": "@pinglue/cli",
  "version": "0.0.0",
  "bin": {
    "pg": "./lib/pg.js"
  },
  "type": "module",
  "files": [
    "lib",
    "types.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "./node_modules/.bin/tsc -w",
    "build-ts": "npm run build-pg && ./node_modules/.bin/tsc -b",
    "clean-extras": "rm *.log",
    "clean-ts": "rm -rf lib; rm tsconfig.tsbuildinfo",
    "clean-node": "rm -rf node_modules",
    "clean-all": "npm run clean-extras; npm run clean-ts; npm run clean-node",
    "test": "npx mocha --loader=@pinglue/utils/testing/replace-module --no-warnings",
    "lint": "./node_modules/.bin/eslint 'src/**/*.ts'",
    "build-pg": "node ./scripts/build-pg.js"
  },
  "dependencies": {
    "@pinglue/print": "^0.0.0",
    "@pinglue/utils": "^0.0.0",
    "commander": "^8.1.0",
    "fs-extra": "^10.0.0",
    "js-beautify": "^1.14.0",
    "pinglue": "^0.0.0",
    "source-map-support": "^0.5.20",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.6",
    "eslint": "^7.31.0",
    "json-schema-to-typescript": "^10.1.5",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "typedoc": "^0.21.4",
    "typescript": "4.5.5"
  }
}
